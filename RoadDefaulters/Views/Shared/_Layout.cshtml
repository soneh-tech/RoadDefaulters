<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/img/apple-icon.png" />
    <link rel="icon" type="image/png" href="~/img/favicon.ico"/>
    <base href="~/"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"  />
    <title>FRSC Defaulters</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport'/>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet"  asp-append-version="true" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css"  asp-append-version="true" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet"  asp-append-version="true" />
    <link href="~/css/light-bootstrap-dashboard.css?v=2.0.0 " rel="stylesheet"  asp-append-version="true" />
    <link href="~/css/demo.css" rel="stylesheet"  asp-append-version="true" />
</head>

<body>
    <div class="wrapper">
        <div class="sidebar" data-color="green">
            <!--
                Tip 1: You can change the color of the sidebar using: data-color="purple | blue | green | orange | red"

                Tip 2: you can also add an image using data-image tag
            -->
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="#" class="simple-text">
                        FRSC Defauters
                    </a>
                </div>
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="index" asp-controller="home">
                            <i class="nc-icon nc-chart-pie-35"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-action="roadusers" asp-controller="home">
                            <i class="nc-icon nc-circle-09"></i>
                            <p>Road Users</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" asp-action="report" asp-controller="home">
                            <i class="nc-icon nc-notes"></i>
                            <p>Reports</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg " color-on-scroll="500">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-action="index" asp-controller="home"> Dashboard </a>
                    <button href="" class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                     
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-action="index" asp-controller="account">
                                    <span class="no-icon">Log out</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->

            @RenderBody();

            <footer class="footer">
                <div class="container-fluid">
                    <nav>
                        <ul class="footer-menu">
                            <li>
                                <a asp-action="index" asp-controller="home">
                                    Home
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Company
                                </a>
                            </li>
                           
                        </ul>
                        <p class="copyright text-center">
                            © @DateTime.UtcNow.Year, Designed as a final year project
                        </p>
                    </nav>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/js/core/jquery.3.2.1.min.js" type="text/javascript" asp-append-version="true" ></script>
    <script src="~/js/core/popper.min.js" type="text/javascript" asp-append-version="true" ></script>
    <script src="~/js/core/bootstrap.min.js" type="text/javascript" asp-append-version="true" ></script>
    <script src="~/js/plugins/bootstrap-switch.js" type="text/javascript" asp-append-version="true"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/plugins/chartist.min.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/plugins/bootstrap-notify.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/light-bootstrap-dashboard.js?v=2.0.0 " type="text/javascript" asp-append-version="true" ></script>
    <script src="~/js/demo.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/webcam.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
